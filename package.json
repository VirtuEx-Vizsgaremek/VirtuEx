{
  "name": "virtuex",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.7.4",
    "turbo": "^2.7.1",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": ">=25"
  },
  "lint-staged": {
    "apps/api/**/*.{js,ts}": "pnpm --filter @virtuex/api lint:fix",
    "apps/web/**/*.{js,jsx,ts,tsx}": "pnpm --filter @virtuex/web lint:fix",
    "**/*.{js,jsx,ts,tsx,json,md,yml,yaml,css}": "prettier --write --ignore-unknown"
  }
}
